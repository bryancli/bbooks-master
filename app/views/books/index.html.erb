<div class="page-header">
  <h1>Books</h1>
</div>


<p><a href="/books/new" class="btn btn-primary">Add a New Book</a></p>


<table class="table table-hover">
  <thead>
    <tr>

      <th>Author</th>

      <th>Title</th>

      <th>Category</th>

      <th>Year</th>

      <th>Picture</th>

      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>

        <td><%= book.author.fullName %></td>

        <td><%= book.title %></td>

        <td><%= book.category.category %></td>

        <td><%= book.year %></td>

        <td><img src="<%= book.picture %>" alt="<%= book.title %>" style="80:px;height:120px"></td>


        <td>
          <a href="/books/<%= book.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/books/<%= book.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>

        <% if current_user.username == 'admin' %>
        <td>
          <a href="/delete_book/<%= book.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
        <% else %>
          <td>
          </td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

