<div class="page-header">
  <h1>Authors</h1>
</div>

<p><a href="/authors/new" class="btn btn-primary">Add a New Author</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Short Bio</th>
      <th></th>

      <% if (current_user.username == 'admin') %>
      <th></th>
      <th></th>
      <% end %>

    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.fullName %></td>
        <td><%= truncate(author.shortBio) %></td>
        <td><a href="/authors/<%= author.id %>" class="btn btn-primary"><i class="fa fa-search-plus"></i></a></td>

        <% if (current_user.username == 'admin') %>
        <td><a href="/authors/<%= author.id %>/edit" class="btn btn-warning"><i class="fa fa-edit"></i></a></td>
        <td><a href="/delete_author/<%= author.id %>" class="btn btn-danger"><i class="fa fa-trash-o"></i></a></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate(@authors) %>
